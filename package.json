{
	"name": "eyevinn-intercom",
	"version": "1.0.6",
	"main": "dist/main.js",
	"type": "module",
	"exports": {
		".": "./dist/main.js"
	},
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build && companion-module-build",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "yarn build:watch",
		"build:watch": "tsc -p tsconfig.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw .",
		"postversion": "git push && git push --tags"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-eyevinn-intercom.git"
	},
	"dependencies": {
		"@companion-module/base": "~1.11.3",
		"ws": "^8.18.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.2.2",
		"@types/node": "^22.10.2",
		"@types/ws": "^8.18.1",
		"eslint": "^9.17.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"typescript": "~5.5.4",
		"typescript-eslint": "^8.18.1"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.7.0"
}
